<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="2dp"
    style="@style/news_summary_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/frist_pic"
            android:layout_width="100dp"
            android:layout_gravity="center_vertical"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="@dimen/dp_4"
                android:text=""
                android:id="@+id/title"
                android:lines="1"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_32_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="内容"
                android:gravity="center_vertical"
                android:id="@+id/sour"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/text2"
                android:textSize="@dimen/text_size_30_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:paddingTop="@dimen/dp_4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/count"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/hsize_28"
                    android:gravity="center_vertical|left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="title"
                    android:id="@+id/time"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/text_size_26_size"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center_vertical|right"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>